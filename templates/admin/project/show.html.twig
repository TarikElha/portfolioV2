{% extends 'base.html.twig' %}

{% block title %}{{ project.title }}{% endblock %}

{% block body %}
    <h1 class="title">{{ project.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ project.date ? project.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="buttonsNav">
        <a href="{{ path('project_index') }}">Liste des projets</a>
    </div>
    
    <a class="editButton" href="{{ path('project_edit', {'id': project.id}) }}">Editer</a>

    {{ include('admin/project/_delete_form.html.twig') }}
{% endblock %}
