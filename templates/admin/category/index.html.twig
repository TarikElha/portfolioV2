{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('category_edit', {'id': category.id}) }}">{{ category.name }}</a>
            </li>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie</td>
            </tr>
        {% endfor %}
    </ul>
    <div><a href="{{ path('admin') }}">Retour à l'acceuil</a></div>
    <a href="{{ path('category_new') }}">Ajouter une catégorie</a>
{% endblock %}
